@model EntityLayer.Concrete.Admin

@{
    ViewBag.Title = "AddAdmin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Yeni Admin</h1>
<br />
@using (Html.BeginForm("AddAdmin", "Authorization", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Admin istifadəçi adı")
        @Html.TextBoxFor(x=>x.AdminUsername, new { @class = "form-control" })
        <br /><br />
        @Html.Label("Parolunuzu yazın")
        @Html.TextAreaFor(x => x.AdminPassword, new { @class = "form-control" })
        <br /><br />
        @Html.Label("Rolunuzu seçin")
        @Html.TextAreaFor(x => x.AdminRole, new { @class = "form-control" })
        <br /><br />
        <button class="btn btn-info">Əlavə et</button>
    </div>
}
