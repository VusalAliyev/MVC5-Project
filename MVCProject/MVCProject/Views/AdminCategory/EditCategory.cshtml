@model EntityLayer.Concrete.Category
 
@{
    ViewBag.Title = "EditCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Kategoriya Güncəllə</h1>
<br />
@using (Html.BeginForm("EditCategory", "AdminCategory", FormMethod.Post))
{
<div class="form-group">
    @Html.Label("Kategoriya adı")
    @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
    <br />
    @Html.Label(" Kategoriya Açıqlaması")
    @Html.TextBoxFor(x => x.CategoryDescription, new { @class = "form-control" })
    <br />
    @Html.Label("Kategoriya Id")
    @Html.TextAreaFor(x => x.CategoryID, new { @class = "form-control" })
    <br />
    <button class="btn btn-success">Güncəllə</button>
</div>
}